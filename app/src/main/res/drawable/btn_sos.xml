<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Default state -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#Ffc0cb" />
            <stroke
                android:width="2dp"
                android:color="#Ffc0cb" />
            <padding
                android:top="12dp"
                android:bottom="12dp"
                android:left="24dp"
                android:right="24dp" />
        </shape>
    </item>

    <!-- Pressed state -->
    <item android:state_pressed="true" android:drawable="@drawable/sos" />

    <!-- Disabled state -->
    <item android:state_enabled="false" android:alpha="0.5" />
</selector>
